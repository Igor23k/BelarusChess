<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/tournament_table_text_view"
        style="@style/TextView.Primary.Bold"
        android:textSize="23dp"
        android:layout_marginTop="@dimen/five_dp"
        android:layout_marginStart="150dp"
        android:text="Таблица"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/participant_name_text_view"
            style="@style/TextView.Primary.Bold"
            android:textSize="18sp"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginStart="40dp"
            android:text="Имя"/>

        <TextView
            android:id="@+id/participant_count_points_text_view"
            style="@style/TextView.Primary.Bold"
            android:textSize="18sp"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_toEndOf="@id/participant_name_text_view"
            android:layout_marginStart="180dp"
            android:text="Очков"/>

        <TextView
            android:id="@+id/participant_place_text_view"
            style="@style/TextView.Primary.Bold"
            android:textSize="18sp"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_toEndOf="@id/participant_count_points_text_view"
            android:layout_marginStart="10dp"
            android:text="Место"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/tournaments_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_85_dp"/>

</LinearLayout>