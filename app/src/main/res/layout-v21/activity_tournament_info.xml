<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"/>

    <TextView
        android:id="@+id/tournament_name_text_view"
        style="@style/TextView.Primary.Bold"
        android:text="@string/default_text"
        android:textSize="@dimen/capture_font_size"/>

    <ImageView
        android:id="@+id/tournament_image_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/tournament_name_text_view"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/profile_image_view"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <!--<TextView
        android:id="@+id/user_location_icon_text_view"
        style="@style/TextIcon"
        android:layout_alignBaseline="@id/user_location_text_view"
        android:layout_below="@id/tournament_image_view"
        android:layout_marginTop="@dimen/five_dp"
        android:layout_toEndOf="@id/profile_image_view"
        android:text="@string/fa_map_marker"/>-->

    <TextView
        android:id="@+id/tournament_location_text_view"
        style="@style/TextView.Primary"
        android:layout_below="@id/tournament_image_view"
        android:layout_marginTop="@dimen/five_dp"
        android:layout_marginStart="@dimen/two_dp"
        android:text="frgregerg"/>

    <TextView
        android:id="@+id/tournament_full_description_text_view"
        style="@style/TextView.Primary"
        android:layout_below="@id/tournament_location_text_view"
        android:layout_marginTop="@dimen/five_dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tournament_full_description_text_view"
        android:layout_toEndOf="@id/profile_image_view"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/ten_dp"
        android:id="@+id/date_main_container">

        <LinearLayout
            android:id="@+id/date_container"
            style="@style/HalfWidth"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/start_date_text_view"
                style="@style/TextView.Primary.Bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="20 Oct" />

            <TextView
                android:id="@+id/dash_text_view"
                style="@style/TextView.Primary.Bold"
                android:layout_marginStart="@dimen/two_dp"
                android:text="-" />

            <TextView
                android:id="@+id/finish_date_text_view"
                style="@style/TextView.Primary.Bold"
                android:layout_marginStart="@dimen/two_dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="26 Oct" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/count_points_container"
            style="@style/HalfWidth"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/judge_label_text_view"
                style="@style/TextView.Secondary"
                android:layout_marginStart="@dimen/two_dp"
                android:text="@string/judge"/>

            <TextView
                android:id="@+id/judge_text_view"
                style="@style/TextView.Primary.Bold"
                android:layout_marginStart="@dimen/two_dp"/>
        </LinearLayout>

    </LinearLayout>

    <com.dd.CircularProgressButton
        android:layout_below="@+id/date_main_container"
        android:id="@+id/circularButton1"
        android:layout_width="240dp"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="60sp"
        android:textColor="@color/cpb_white"
        android:textSize="18sp"
        app:cpb_textComplete="judge"
        app:cpb_textError="default_text" />

</LinearLayout>