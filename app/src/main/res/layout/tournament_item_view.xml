<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="@dimen/five_dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tournament_name_text_view"
        style="@style/TextView.Primary.Bold"
        android:layout_toEndOf="@id/profile_image_view"
        android:text="@string/default_text"/>

    <ImageView
        android:id="@+id/tournament_image_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/tournament_name_text_view"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/profile_image_view"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tournament_image_view"
        android:layout_toEndOf="@id/profile_image_view"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/date_container"
            style="@style/FortyPercentWidth"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/start_date_text_view"
                style="@style/TextView.Secondary"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="20 Oct"/>

            <TextView
                android:id="@+id/dash_text_view"
                style="@style/TextView.Secondary"
                android:layout_marginStart="@dimen/two_dp"
                android:text="-"/>

            <TextView
                android:id="@+id/finish_date_text_view"
                style="@style/TextView.Secondary"
                android:layout_marginStart="@dimen/two_dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="26 Oct"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/position_number_container"
            style="@style/ThirdWidth"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/position_number_label_text_view"
                style="@style/TextView.Secondary"
                android:layout_marginStart="@dimen/two_dp"
                android:text="@string/position_number"/>

            <TextView
                android:id="@+id/position_number_text_view"
                style="@style/TextView.Secondary"
                android:layout_marginStart="@dimen/two_dp"
                android:text="16"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/count_points_container"
            style="@style/ThirdWidth"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/count_points_label_text_view"
                style="@style/TextView.Secondary"
                android:layout_marginStart="@dimen/two_dp"
                android:text="@string/count_points"/>

            <TextView
                android:id="@+id/count_points_text_view"
                style="@style/TextView.Secondary"
                android:layout_marginStart="@dimen/two_dp"
                android:text="16"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>