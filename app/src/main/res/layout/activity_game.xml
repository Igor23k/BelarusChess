<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tournament_full_description_text_view"
        android:orientation="horizontal"
        android:id="@+id/avatars_container"
        android:paddingTop="25dp">

        <LinearLayout
            android:id="@+id/avatars_internal_container"
            style="@style/FortyPercentWidth"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/first_player__image_view"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="@dimen/five_dp"
                android:layout_marginStart="75dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/count_points_first_player_text_view"
                style="@style/TextView.Primary.Bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="@dimen/_15_dp"
                android:text="1" />

            <TextView
                android:id="@+id/dash_text_view"
                style="@style/TextView.Primary.Bold"
                android:layout_marginStart="25dp"
                android:layout_marginTop="@dimen/_15_dp"
                android:text="-" />

            <TextView
                android:id="@+id/count_points_second_player_text_view"
                style="@style/TextView.Primary.Bold"
                android:layout_marginStart="25dp"
                android:layout_marginTop="@dimen/_15_dp"
                android:text="0" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/second_player_image_view"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="@dimen/five_dp"
                android:layout_marginStart="20dp"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatars_container"
        android:orientation="horizontal"
        android:id="@+id/players_name_container">

        <LinearLayout
            android:id="@+id/players_name_internal_container"
            style="@style/FortyPercentWidth"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/first_player__name_text_view"
                style="@style/TextView.Primary.Bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginEnd="@dimen/five_dp"
                android:layout_marginStart="30dp"
                android:text="Mikita Bashkov" />

            <TextView
                android:id="@+id/second_player__name_text_view"
                style="@style/TextView.Primary.Bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginEnd="@dimen/five_dp"
                android:layout_marginStart="65dp"
                android:text="Mikita Bashkov" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/game_data_text_view"
        style="@style/TextView.Secondary"
        android:ellipsize="end"
        android:maxLines="100"
        android:padding="8dp"/>
</LinearLayout>